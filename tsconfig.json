{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": "src",
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "isolatedModules": true,
        "lib": ["DOM", "ES5", "ES6", "ES7", "ESNext"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "target": "ES2020",
    },
    "include": ["src/**/*.ts"]
}
